{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": "./",
		"incremental": true,
		"noEmit": true,
		"outDir": "dist/",
		"types": ["@types/styled-components-react-native"],
		"paths": {
			"@/*": ["./src/*"],
			"@assets/*": ["./assets/*"]
		}
	},
	"typeRoots": ["./types"],
	"include": ["src/**/*"],
	// exclude を明示的に指定
	"exclude": ["node_modules", "dist"]
}
